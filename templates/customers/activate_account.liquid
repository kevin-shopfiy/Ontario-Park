<div class="container">

  <h1 class="my-4 my-md-5 font-3 font-md-1 text-center">{{ 'customer.activate_account.title' | t }}</h1>
  <p class="tw-text-center tw-mb-4">{{ 'customer.activate_account.subtext' | t }}</p>

  <div class="tw-w-full md:tw-w-1/2 tw-mx-auto tw-mb-12">
    {% assign formId = 'ActivteAccount' %}
    {% form 'activate_customer_password', id: formId, novalidate: 'novalidate' %}
      {%- if form.errors -%}
        <div class="tw-block tw-text-center tw-w-2/3 tw-mx-auto tw-my-4 tw-bg-red-200 tw-border-red-600 tw-border-2 tw-rounded tw-text-black">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}

      <div class="form-group">
        <label for="CustomerPassword" class="sr-only">
          {{ 'customer.activate_account.password' | t }}
        </label>
        <input type="password"
          name="customer[password]"
          id="CustomerPassword"
          class="form-control rounded-pill"
          placeholder="{{ 'customer.activate_account.password' | t }}">
      </div>

      <div class="form-group">
        <label for="CustomerPasswordConfirmation" class="sr-only">
          {{ 'customer.activate_account.password_confirm' | t }}
        </label>
        <input type="password"
          name="customer[password_confirmation]"
          id="CustomerPasswordConfirmation"
          class="form-control rounded-pill"
          placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
      </div>

      <div class="tw-flex tw-flex-col-reverse md:tw-flex-row md:tw-space-x-2">
        <button class="tw-btn tw-btn-secondary tw-w-full tw-rounded-full tw-flex tw-justify-center tw-items-center tw-font-semibold tw-mb-4" type="submit">
          {{ 'customer.activate_account.cancel' | t }}
        </button>
        <button class="tw-btn tw-btn-primary tw-w-full tw-rounded-full tw-flex tw-justify-center tw-items-center tw-font-semibold tw-mb-4" type="submit">
          {{ 'customer.activate_account.submit' | t }}
          {% render 'icon-arrow-right' %}
        </button>
      </div>

    {% endform %}
  </div>

</div>
