{%- liquid
  assign logo_position = section.settings.logo_position
  case logo_position
    when 'left'
      assign logo_justify = 'margin-right: auto;'
    when 'center'
      assign logo_justify = 'margin: auto;'
    when 'right'
      assign logo_justify = 'margin-left: auto;'
    else
  endcase

  assign locale_selector = false
  assign currency_selector = false
  if section.settings.show_locale_selector and shop.published_locales.size > 1
    assign show_locale_selector = true
  endif

  if section.settings.show_currency_selector and shop.enabled_currencies.size > 1
    assign show_currency_selector = true
  endif

-%}

<div class="critical-hidden" data-section-id="{{ section.id }}" data-section-type="footer">

  {% if section.settings.footer_style == 'style-one' %}
    {% render 'footer-style-one' %}
  {% else %}
    {% render 'footer-style-two' %}
  {% endif %}

</div>

