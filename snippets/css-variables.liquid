{% style %}

:root {
  /* COLORS */

  --color:{{ settings.color }};
  --color-mix: {{ settings.color | color_mix: settings.bg_color, 60 }};
  --link-color: {{ settings.link_color }};
  --link-color-mix: {{ settings.link_color | color_mix: settings.bg_color, 60 }};
  --link-color-light: {{ settings.link_color | color_lighten: 30 | color_saturate: 40 }};
  --link-color-hover: {{ settings.link_color_hover }};
  --bg-color: {{ settings.bg_color }};
  --bg-color-dark: {{ settings.bg_color | color_darken: 30 }};
  --bg-color-mix-1: {{ settings.bg_color | color_mix: settings.color, 90 }};
  --bg-color-mix-2: {{ settings.bg_color | color_mix: settings.link_color, 90 }};
  --bg-color-mix-3: {{ settings.bg_color | color_mix: settings.color, 69 }};
  --bg-color-mix-4: {{ settings.bg_color | color_mix: settings.color, 96 }};
  --form-color: #121212;
  --bg-color-nav: {{ settings.bg_color_nav }};
  --regular-price-color: {{ settings.regular_color }};
  --sale-price-color: {{ settings.sale_color }};
  --header-logo-color: {{ settings.header_logo_color }};
  --footer-logo-color: {{ settings.footer_logo_color }};
  --footer-color: {{ settings.footer_color }};
  --footer-bg-color: {{ settings.footer_bg_color }};
  --btn-color: {{ settings.btn_color }};
  --btn-bg-color: {{ settings.btn_bg_color }};
  --secondary-btn-color: {{ settings.secondary_btn_color }};
  --secondary-btn-bg-color: {{ settings.secondary_btn_bg_color }};
  --secondary-btn-bg-color-light: {{ settings.secondary_btn_bg_color | color_lighten: 5 }};
  --secondary-btn-bg-hover: {{ settings.secondary_btn_bg_color | color_darken: 10 }};
  --border-color: {{ settings.bg_color | color_mix: settings.color, 90 }};
  --product-grid-border-color: {{ settings.product_grid_border_color }};
  --facet-btn-bg-color: {{ settings.facet_btn_bg_color }};
  --facet-btn-color-bg-active: {{ settings.facet_btn_bg_color_active }};

  /* TYPOGRAPHY */

  --font-family: {{ settings.font.family }},{{ settings.font.fallback_families }};
  --font-size: {{ settings.font_size | divided_by: 16.0 }}rem;
  --font-weight: {{ settings.font.weight }};
  --font-style: {{ settings.font.style }};
  --h16-font-family: {{ settings.h16_font.family }},{{ settings.h16_font.fallback_families }};
  --h16-font-weight: {{ settings.h16_font.weight }};
  --h16-font-style: {{ settings.h16_font.style }};
  --announcement-font-family: {{ settings.announcement_font.family }},{{ settings.announcement_font.fallback_families }};
  --announcement-font-weight: {{ settings.announcement_font.weight }};
  --announcement-font-style: {{ settings.announcement_font.style }};
  --logo-font-size: {{ settings.logo_font_size | divided_by: 16.0 }}rem;

  /* LAYOUT */
  --section-spacing: {{ settings.section_space }}rem;


