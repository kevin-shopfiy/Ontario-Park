          {% endif %}
          <p class="mt-2 mb-0 tw-break-words">
            {{ section.settings.badge_2_text }}
          </p>
        </div>
      </div>
    {% endif %}

    {% if section.settings.show_badge_3 %}
      <div class="col px-2 pb-3">
        <div class="trust-badge d-flex flex-column justify-content-center align-items-center p-2 text-center rounded">
          {% if section.settings.badge_3_icon != blank %}
            <img src="{{ section.settings.badge_3_icon | img_url: 'x35' }}" alt="{{ section.settings.badge_3_icon.alt }}"/>
          {% endif %}
          <p class="mt-2 mb-0 tw-break-words">
            {{ section.settings.badge_3_text }}
          </p>
        </div>
      </div>
    {% endif %}

    {% if section.settings.show_badge_4 %}
      <div class="col px-2 pb-3">
        <div class="trust-badge d-flex flex-column justify-content-center align-items-center p-2 text-center rounded">
